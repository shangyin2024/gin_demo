# ==========================================
# Gin Demo 环境变量配置示例
# ==========================================
# 使用方法：
#   1. 复制此文件: cp .env.example .env
#   2. 修改 .env 中的实际值
#   3. .env 文件已被 .gitignore 忽略，不会提交到版本控制
# ==========================================

# ==========================================
# 应用环境
# ==========================================
# 环境: dev, test, prod
APP_ENV=dev

# 服务器配置
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_MODE=debug

# ==========================================
# 数据库配置（MySQL）
# ==========================================
DATABASE_DRIVER=mysql
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USER=root
DATABASE_PASSWORD=password
DATABASE_NAME=gin_demo
DATABASE_MAX_OPEN_CONNS=50
DATABASE_MAX_IDLE_CONNS=10

# ==========================================
# Redis 配置
# ==========================================
# 单机模式
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10

# 哨兵模式（生产环境）
REDIS_SENTINEL_ENABLED=false
REDIS_SENTINEL_MASTER=mymaster
REDIS_SENTINEL_ADDRS=localhost:26379,localhost:26380,localhost:26381

# ==========================================
# JWT 配置
# ==========================================
# ⚠️ 生产环境必须修改！
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRATION=24h

# ==========================================
# 日志配置
# ==========================================
LOGGER_LEVEL=info
LOGGER_FORMAT=json
LOGGER_ADD_SOURCE=false

# ==========================================
# CORS 配置
# ==========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true

# ==========================================
# 安全配置
# ==========================================
# HSTS（仅 HTTPS 生产环境启用）
SECURITY_ENABLE_HSTS=false
SECURITY_HSTS_MAX_AGE=31536000

# TLS/HTTPS（生产环境）
SECURITY_TLS_ENABLED=false
SECURITY_TLS_CERT_FILE=/path/to/cert.pem
SECURITY_TLS_KEY_FILE=/path/to/key.pem

# ==========================================
# 缓存配置
# ==========================================
CACHE_DEFAULT_TTL=5m
CACHE_USER_TTL=5m
CACHE_ENABLE_JITTER=true

# ==========================================
# 性能分析（开发环境）
# ==========================================
# 启用 pprof 性能分析
ENABLE_PPROF=true
PPROF_PORT=6060

# ==========================================
# 监控配置
# ==========================================
# Prometheus metrics
ENABLE_METRICS=true
METRICS_PATH=/metrics
